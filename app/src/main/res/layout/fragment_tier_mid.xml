<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/black">

            <LinearLayout
                android:id="@+id/tier1Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/brightGray"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/tier1Button"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/red"
                    android:clickable="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="1" />

                <com.skydoves.androidveil.VeilRecyclerFrameView
                    android:id="@+id/tier1Recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:veilFrame_baseAlpha="0.6"
                    app:veilFrame_baseColor="@color/veiled_base"
                    app:veilFrame_highlightAlpha="1.0"
                    app:veilFrame_highlightColor="@color/veiled_highlight"
                    app:veilFrame_layout="@layout/item_tier"
                    app:veilFrame_radius="4dp"
                    app:veilFrame_shimmerEnable="true"
                    app:veilFrame_veiled="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tier2Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/brightGray"
                android:layout_marginTop="10dp"
                >

                <Button
                    android:id="@+id/tier2Button"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="@color/orange"
                    android:clickable="false"
                    android:layout_gravity="center_vertical"
                    android:text="2" />

                <com.skydoves.androidveil.VeilRecyclerFrameView
                    android:id="@+id/tier2Recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:veilFrame_baseAlpha="0.6"
                    app:veilFrame_baseColor="@color/veiled_base"
                    app:veilFrame_highlightAlpha="1.0"
                    app:veilFrame_highlightColor="@color/veiled_highlight"
                    app:veilFrame_layout="@layout/item_tier"
                    app:veilFrame_radius="4dp"
                    app:veilFrame_shimmerEnable="true"
                    app:veilFrame_veiled="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tier3Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/brightGray"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/tier3Button"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/teal_700"
                    android:clickable="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:text="3" />

                <com.skydoves.androidveil.VeilRecyclerFrameView
                    android:id="@+id/tier3Recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:veilFrame_baseAlpha="0.6"
                    app:veilFrame_baseColor="@color/veiled_base"
                    app:veilFrame_highlightAlpha="1.0"
                    app:veilFrame_highlightColor="@color/veiled_highlight"
                    app:veilFrame_layout="@layout/item_tier"
                    app:veilFrame_radius="4dp"
                    app:veilFrame_shimmerEnable="true"
                    app:veilFrame_veiled="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tier4Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/brightGray"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/tier4Button"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/teal_200"
                    android:clickable="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="4" />

                <com.skydoves.androidveil.VeilRecyclerFrameView
                    android:id="@+id/tier4Recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:veilFrame_baseAlpha="0.6"
                    app:veilFrame_baseColor="@color/veiled_base"
                    app:veilFrame_highlightAlpha="1.0"
                    app:veilFrame_highlightColor="@color/veiled_highlight"
                    app:veilFrame_layout="@layout/item_tier"
                    app:veilFrame_radius="4dp"
                    app:veilFrame_shimmerEnable="true"
                    app:veilFrame_veiled="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tier5Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/brightGray"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/tier5Button"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/purple_200"
                    android:clickable="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="5" />

                <com.skydoves.androidveil.VeilRecyclerFrameView
                    android:id="@+id/tier5Recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:veilFrame_baseAlpha="0.6"
                    app:veilFrame_baseColor="@color/veiled_base"
                    app:veilFrame_highlightAlpha="1.0"
                    app:veilFrame_highlightColor="@color/veiled_highlight"
                    app:veilFrame_layout="@layout/item_tier"
                    app:veilFrame_radius="4dp"
                    app:veilFrame_shimmerEnable="true"
                    app:veilFrame_veiled="true"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>