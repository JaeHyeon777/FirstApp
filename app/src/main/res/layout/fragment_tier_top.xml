<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/tier1Button"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/red"
                    android:clickable="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tier1Recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/tier2Button"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/orange"
                    android:clickable="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="2" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tier2Recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/tier3Button"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/teal_700"
                    android:clickable="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="3" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tier3Recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/tier4Button"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/teal_200"
                    android:clickable="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="4" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tier4Recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/tier5Button"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/purple_200"
                    android:clickable="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="5" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tier5Recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>